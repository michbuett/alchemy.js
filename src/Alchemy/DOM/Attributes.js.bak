exports.unsafeSetAttr = function (name, val, node) {
  return function () {
    if (val === false) {
      node.removeAttribute(name)
    } else if (val === true) {
      node.setAttribute(name, name)
    } else {
      node.setAttribute(name, val)
    }
  }
}

